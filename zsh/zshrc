# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# ===== PATH Configuration =====
# Add local bin to PATH
export PATH="$HOME/.local/bin:$PATH"

# Rancher Desktop (if installed)
[[ -d "$HOME/.rd/bin" ]] && export PATH="$HOME/.rd/bin:$PATH"

# Homebrew (macOS)
if [[ -f "/opt/homebrew/bin/brew" ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# ===== Powerlevel10k Theme =====
# Load from Homebrew (macOS) or home directory (Linux)
# Falls back to a nice prompt if p10k isn't installed
_p10k_loaded=0
if [[ -f "/opt/homebrew/share/powerlevel10k/powerlevel10k.zsh-theme" ]]; then
    source /opt/homebrew/share/powerlevel10k/powerlevel10k.zsh-theme
    _p10k_loaded=1
elif [[ -f "$HOME/.powerlevel10k/powerlevel10k.zsh-theme" ]]; then
    source ~/.powerlevel10k/powerlevel10k.zsh-theme
    _p10k_loaded=1
fi

# Fallback prompt if Powerlevel10k not available (works on any server)
if [[ $_p10k_loaded -eq 0 ]]; then
    autoload -Uz vcs_info
    precmd() { vcs_info }
    zstyle ':vcs_info:git:*' formats ' %F{yellow}(%b)%f'
    setopt PROMPT_SUBST
    PROMPT='%F{cyan}%n%f@%F{magenta}%m%f:%F{blue}%~%f${vcs_info_msg_0_} %F{green}$%f '
fi
unset _p10k_loaded

# ===== Zsh Plugins =====
# Autosuggestions
if [[ -f "/opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh" ]]; then
    source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
elif [[ -f "$HOME/.zsh-autosuggestions/zsh-autosuggestions.zsh" ]]; then
    source ~/.zsh-autosuggestions/zsh-autosuggestions.zsh
fi

# Syntax highlighting (must be last)
if [[ -f "/opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh" ]]; then
    source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
elif [[ -f "$HOME/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh" ]]; then
    source ~/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

# ===== History Configuration =====
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE

# ===== Load Additional Configurations =====
# Get the dotfiles directory
if [[ -L ~/.zshrc ]]; then
    # If .zshrc is a symlink, get the dotfiles directory
    DOTFILES_DIR="$(dirname "$(dirname "$(readlink ~/.zshrc)")")"
else
    # Fallback - assume dotfiles structure
    DOTFILES_DIR="$HOME/dotfiles"
fi

# Load shared components (compatible with bash and zsh)
[[ -f "$DOTFILES_DIR/shell/exports.sh" ]] && source "$DOTFILES_DIR/shell/exports.sh"
[[ -f "$DOTFILES_DIR/shell/aliases.sh" ]] && source "$DOTFILES_DIR/shell/aliases.sh"
[[ -f "$DOTFILES_DIR/shell/functions.sh" ]] && source "$DOTFILES_DIR/shell/functions.sh"

# Load zsh-specific components (legacy support)
[[ -f "$DOTFILES_DIR/zsh/aliases.zsh" ]] && source "$DOTFILES_DIR/zsh/aliases.zsh"
[[ -f "$DOTFILES_DIR/zsh/functions.zsh" ]] && source "$DOTFILES_DIR/zsh/functions.zsh"

# Load local customizations (not tracked in git)
[[ -f ~/.zsh_local ]] && source ~/.zsh_local

# ===== Load p10k configuration =====
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
